<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="315dp"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
   >

    <android.support.v7.widget.CardView
        android:layout_width="180dp"
        android:id="@+id/coursescardView"
        android:layout_height="200dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        android:layout_gravity="center"
        app:contentPadding="5dp"
        android:layout_marginBottom="1dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/certificatebasic"
            android:id="@+id/featuredimageviews" />

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/featuredtitles"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="Certificate in Trade Customer Realations"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/featurecoursesprice"
        android:textColor="@color/bluenav"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="$300"/>

</LinearLayout>