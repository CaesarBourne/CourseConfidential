<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/newsLetterCard"
    android:layout_marginBottom="10dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/impexLogo"
            android:layout_width="65dp"
            android:layout_height="114dp"
            android:transitionName="@string/newsimage_transition"
            app:srcCompat="@drawable/impexlogo"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTitleView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:gravity="start"
                android:text="Basic Trade Business made easy"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:transitionName="@string/newstitle_transition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/courseImage"
                tools:layout_editor_absoluteY="12dp" />

            <TextView
                android:id="@+id/newsContentView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:text="@string/Describe"
                android:transitionName="@string/newsdescription_transition"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newsTitleView" />

            <View
                android:id="@+id/view2"
                android:layout_width="270dp"
                android:layout_height="4dp"
                android:layout_margin="1dp"
                android:layout_marginTop="28dp"
                android:background="@color/black"
                app:layout_constraintStart_toEndOf="@+id/courseImage"
                app:layout_constraintTop_toBottomOf="@+id/courseText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
               >
            <TextView
                android:id="@+id/readDurationView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 mins read"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:transitionName="@string/newsreaduration_transition"
                app:layout_constraintStart_toEndOf="@+id/impexLogo"
                tools:layout_editor_absoluteY="182dp" />

            <TextView
                android:id="@+id/newsDateView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/02/2019"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:transitionName="@string/newsdate_transition"
                tools:layout_editor_absoluteX="195dp"
                tools:layout_editor_absoluteY="182dp" />

                <ImageButton
                    android:id="@+id/shareNews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_menu_share"
                    tools:layout_editor_absoluteY="182dp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>